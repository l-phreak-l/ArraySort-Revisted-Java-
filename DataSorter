import java.util.List;
import java.util.Scanner;

/**
 *
 *
 * main class main driver, handles user input and displays data
 *
 */

public class DataSorter {
    private DataManager dataManager;
    private Scanner scanner;

    public DataSorter(){
        this.dataManager = new DataManager();
        this.scanner = new Scanner(System.in);
    }
    public static void main(String[] args){
        DataSorter app = new DataSorter();
        app.run();
    }
    public void run(){
        displayWelcomeMessage();

        boolean continueRunning = true;
        while(continueRunning){
            displayMenu();
            int choice = getMenuChoice();
            switch(choice){
                case 1:
                    addEntries();
                    break;
                case 2:
                    displayData();
                    break;
                case 3:
                    clearData();
                    break;
                case 4:
                    continueRunning = false;
                    System.out.println("Toodles!");
                    break;
                default:
                    System.out.println("Invalid choice.Try again");
            }
        }
        scanner.close();
    }


    private void displayWelcomeMessage(){
        System.out.println("=========================================");
        System.out.println("               DATA SORTER               ");
        System.out.println("=========================================");
        System.out.println();
    }

    private void displayMenu(){
        System.out.println("\n--- MAIN MENU ---");
        System.out.println("1. Add Numbers or Names");
        System.out.println("2. Display Data (Unsorted & Sorted)");
        System.out.println("3. Clear All Data");
        System.out.println("4. Exit");
        System.out.print("Enter your choice (1-4): ");
    }

    private int getMenuChoice(){
        while(true){
            try{
                int choice = Integer.parseInt(scanner.nextLine().trim());
                if(choice >= 1 && choice <= 4){
                    return choice;
                } else {
                    System.out.println("Invalid choice. please enter a number between 1 and 4: ");
                }
            } catch(NumberFormatException e){
                System.out.println("Invalid choice. please enter a number between 1 and 4: ");
            }
        }
    }
    // disp algo options
    private void displayAlgorithmMenu() {
        System.out.println("\n--- CHOOSE SORTING METHOD ---");
        System.out.println("1. Bubble Sort");
        System.out.println("2. Selection Sort");
        System.out.println("3. Insertion Sort");
        System.out.println("4. Default Sort (Automatic)");
        System.out.print("Enter your choice (1-4): ");
    }

    // get algo choice
    private int getAlgorithmChoice() {
        while(true){
            try{
                int choice = Integer.parseInt(scanner.nextLine().trim());
                if(choice >= 1 && choice <= 4){
                    return choice;
                } else {
                    System.out.print("Invalid choice. Please enter a number between 1 and 4: ");
                }
            } catch(NumberFormatException e){
                System.out.print("Invalid choice. Please enter a number between 1 and 4: ");
            }
        }
    }
    private void addEntries() {
        System.out.println("\n--- ADD ENTRIES ---");
        System.out.println("You can enter numbers ( 42, 3.14, -5) or names ( John, Alice)");
        System.out.println("Enter 'done' when finished adding entries.");

        int entryCount = 0;

        while (true) {
            System.out.print("Enter entry #" + (entryCount + 1) + ": ");
            String input = scanner.nextLine().trim();

            if (input.equalsIgnoreCase("done")) {
                break;
            }

            if (input.isEmpty()) {
                System.out.println("Empty input ignored. Please enter valid data or 'done' to finish.");
                continue;
            }


            if (InputValidator.isValidNumber(input)) {
                Number number = InputValidator.convertToNumber(input);
                dataManager.addEntry(number, true);
                System.out.println("✓ Added number: " + number);
                entryCount++;
            } else if (InputValidator.isValidName(input)) {
                dataManager.addEntry(input, false);
                System.out.println("✓ Added name: " + input);
                entryCount++;
            } else {
                System.out.println("✗ Invalid entry! Please enter a valid number or name (letters only).");
            }
        }

        System.out.println("Added " + entryCount + " entries successfully.");
    }


    private void displayData() {
        if (dataManager.isEmpty()) {
            System.out.println("\nNo data to display. Please add some entries first.");
            return;
        }

        List<Object> unsortedData = dataManager.getUnsortedData();

        System.out.println("UNSORTED DATA (" + unsortedData.size() + " items):");
        displayFormattedList(unsortedData);

        displayAlgorithmMenu();
        int algorithmChoice = getAlgorithmChoice();

        List<Object> sortedData = dataManager.getSortedData(algorithmChoice);

        System.out.println("\nSORTED DATA (" + sortedData.size() + " items)");
        System.out.println("Using: " + dataManager.getAlgorithmName(algorithmChoice));
        displayFormattedList(sortedData);

    }


    private void displayFormattedList(List<Object> list) {
        System.out.print("[");
        for (int i = 0; i < list.size(); i++) {
            Object item = list.get(i);
            if (item instanceof String) {
                System.out.print("\"" + item + "\"");
            } else {
                System.out.print(item);
            }

            if (i < list.size() - 1) {
                System.out.print(", ");
            }


            if ((i + 1) % 5 == 0 && i < list.size() - 1) {
                System.out.print("\n ");
            }
        }
        System.out.println("]");
    }


    private void clearData() {
        dataManager.clearData();
        System.out.println("\nAll data has been cleared.");
    }

}
